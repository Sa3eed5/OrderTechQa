<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="product_template_form_view_inherit" model="ir.ui.view">
        <field name="name">product.template.form.view.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="point_of_sale.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='pos_categ_ids']" position="attributes">
                <attribute name="required">available_in_pos</attribute>
            </xpath>
            <xpath expr="//field[@name='pos_categ_ids']" position="after">
                <field name="ordertech_productId" strig="OrderTech ProductId" readonly="1"/>
            </xpath>
        </field>
    </record>
    <record id="action_sync_product_to_ordertech" model="ir.actions.server">
        <field name="name">Sync To orderTech</field>
        <field name="model_id" ref="product.model_product_template"/>
        <field name="binding_model_id" ref="product.model_product_template"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">records.action_sync_products_to_ordertech()</field>
    </record>
</odoo>