<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="ordertech_instance_view_form" model="ir.ui.view">
        <field name="name">ordertech.instance.view.form</field>
        <field name="model">ordertech.configration</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="refresh_api_key" type="object" string="Refresh Key" class="oe_highlight"
                            invisible="api_key"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Connected"
                            invisible="not ordertech_token"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name"
                                   placeholder="Instance Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="url"/>
                            <field name="api_key"/>
                            <field name="ordertech_token" password="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="ordertech_instance_view_tree" model="ir.ui.view">
        <field name="name">ordertech.instance.view.tree</field>
        <field name="model">ordertech.configration</field>
        <field name="arch" type="xml">
            <list sample="1">
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="ordertech_instance_action" model="ir.actions.act_window">
        <field name="name">OrderTech Instance</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ordertech.configration</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'create':False}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new OrderTech Instance
            </p>
        </field>
    </record>

    <!-- This Menu Item will appear in the Upper bar, That's why It needs NO parent or action -->
    <menuitem id="ordertech_root"
              name="OrderTech"
              web_icon="ordertech_integration,static/description/icon.png"/>

    <!-- This Menu Item Must have a parent -->
    <menuitem id="ordertech_config_menu"
              name="Configration"
              parent="ordertech_root"
              sequence="10"/>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="ordertech_config_instance"
              name="OrderTech Instance"
              parent="ordertech_config_menu"
              sequence="1"
              action="ordertech_instance_action"/>
</odoo>